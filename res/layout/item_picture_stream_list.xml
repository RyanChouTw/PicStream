<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/item_picture_stream_list_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/picstream_list_item_margin"
        android:layout_marginBottom="@dimen/picstream_list_item_margin"
        android:layout_marginLeft="@dimen/picstream_list_item_margin"
        android:layout_marginRight="@dimen/picstream_list_item_margin"        
        android:contentDescription="@string/content_desc_pic_stream_cover_img"/>

	<TextView
		android:id="@+id/item_picture_stream_list_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="16sp"/>
    
</LinearLayout>
