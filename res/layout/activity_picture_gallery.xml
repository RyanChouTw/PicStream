<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PictureGalleryActivity">

    <com.origamilabs.library.views.StaggeredGridView
            android:id="@+id/gridViewPicGallery"
            staggered:numColumns="3"
            staggered:drawSelectorOnTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pocket"
            android:layout_weight="5">
            
        <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/horListViewPicGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hor_list_margin"
                android:layout_marginRight="@dimen/hor_list_margin"/>
    </LinearLayout>

</LinearLayout>
