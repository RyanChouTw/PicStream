<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_main">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/newBtnPictureStreamMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_picture_stream_main"
            android:text="@string/new_picture_stream"
            android:textColor="@color/white" />
		
	    <Button
	        android:id="@+id/listBtnPictureStreamMain"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_picture_stream_main"
	        android:layout_marginTop="@dimen/paddingMainActivityButton"
	        android:text="@string/picture_stream_list"
	        android:textColor="@color/white"/>
	    
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/fbBtnPictureStreamMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/fb_button_margin"
        android:layout_marginLeft="@dimen/fb_button_margin"
        android:background="@drawable/fb_btn_picture_stream_main" 
        android:contentDescription="@string/content_desc_pic_FB_button"/>
		
</RelativeLayout>
